<Page x:Class="CityOrganisations.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CityOrganisations.Views"
      xmlns:cityOrganisations="clr-namespace:CityOrganisations"
      xmlns:prism="http://prismlibrary.com/"
      mc:Ignorable="d"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Title="MainTabPage" Height="auto" Width="auto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Margin="10">
            <Border x:Name="MapBorder" MouseWheel="Border_MouseWheel">
                <Image Source="/CityOrganisations;component/Images/CityMap.png" Stretch="UniformToFill"/>
            </Border>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="10">
            <Frame prism:RegionManager.RegionName="{x:Static cityOrganisations:RegionNames.FilialBorderRegion}"/>
        </Border>
    </Grid>
</Page>