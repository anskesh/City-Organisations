<Page x:Class="CityOrganisations.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CityOrganisations.Views"
      xmlns:prism="http://prismlibrary.com/"
      mc:Ignorable="d"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Title="MainTabPage" Height="auto" Width="auto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Margin="10">
            <Border x:Name="MapBorder" MouseWheel="Border_MouseWheel">
                <Image Source="/CityOrganisations;component/Images/CityMap.png" Stretch="UniformToFill"/>
            </Border>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1" Width="350" Margin="10" Grid.Column="1" HorizontalAlignment="Right">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <TextBlock Text="Филиалы города" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <Button Grid.Column="1" Content="Поиск" Margin="5" Width="65"/>
                        <Button Grid.Column="2" Content="Фильтр" Command="{Binding OpenFilterCommand}" Margin="5" Width="65"/>
                    </Grid>
                </StackPanel>
                <ScrollViewer Grid.Row="1">
                    <ListBox ItemsSource="{Binding Path=Items}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource HomeCustomListBoxItem}" />
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </ScrollViewer>
                <Popup IsOpen="{Binding IsFilterPopupOpen}" StaysOpen="False" Placement="Mouse">
                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Выберите районы города" HorizontalAlignment="Center" Margin="5"/>
                            <CheckBox Content="Зашекснинский" Margin="5"/>
                            <CheckBox Content="Индустриальный" Margin="5"/>
                            <CheckBox Content="Заречье" Margin="5"/>
                            <Button Content="Применить" Command="{Binding ApplyFilterCommand}" HorizontalAlignment="Center" Margin="5" Width="80"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>
    </Grid>
</Page>