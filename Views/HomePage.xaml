<Page x:Class="CityOrganisations.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CityOrganisations.Views"
      xmlns:prism="http://prismlibrary.com/"
      mc:Ignorable="d"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Title="MainTabPage" Height="auto" Width="auto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border x:Name="FilialBorder" BorderBrush="Black" BorderThickness="1" Margin="10" Grid.Column="1" Width="350" HorizontalAlignment="Right">
            <StackPanel Margin="-1,0,0,0">
                <DockPanel>
                    <TextBlock Text=" Филиалы города" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                    <Button Content="   Фильтр   " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
                </DockPanel>
                <ListBox Height="{Binding ActualHeight, ElementName=FilialBorder}" Width="{Binding ActualWidth, ElementName=FilialBorder}">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" Padding="5" Margin="2">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="Honeydew" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="LightGreen" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 1" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 2" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 3" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 4" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 5" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 6" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 7" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 8" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 9" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 10" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 11" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 12" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 13" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 14" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 15" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 16" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 17" Margin="0 5" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="Филиал 18" Margin="0 5" />
                    </ListBoxItem>
                    
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Page>